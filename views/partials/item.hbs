<div class="col-lg-3 col-md-6">
    <div class="item">
        {{#each book.images}}
        {{#if @first}}
        <img src="{{this}}" alt="img">
        {{/if}}
        {{/each}}
        <h3>{{book.name}}</h3>
        <h6><span class="price">{{book.price}}</span></h6>
        <div class="hover">
            <a href="/products/detail/{{book._id}}">
                <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
            </a>
        </div>
    </div>
</div>