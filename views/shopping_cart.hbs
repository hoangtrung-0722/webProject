<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
</head>

<body>
    {{> header active_products=true}}
    <div class="container" style="margin-bottom:50px;">
        {{!-- <div class="breadcrumb">
            <div class="container">
                <a class="breadcrumb-item" href="index">Home</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </div>
        </div> --}}


        <table class="table" id="cart-table">
            <thead>
                <tr>
                    <th class="table-secondary" scope="col">Serial</th>
                    <th class="table-secondary" scope="col">Book's name</th>
                    <th class="table-secondary" scope="col">Price</th>
                    <th class="table-secondary" scope="col">Amount</th>
                    <th class="table-secondary" scope="col">Sum</th>
                </tr>
            </thead>
            <tbody>
                {{!-- generate when cart has items inside --}}
            </tbody>
        </table>
        <a href="/products"><button class="btn btn-primary" style="margin-bottom:50px;">Continue shopping</button></a>

        <div class="col-6">
            <form action="{{#if currentUser}}/products/checkout{{/if}}" method="POST" id="billForm">
                <div class="form">
                    <table class="table" id="bill-table">
                        <thead>
                            <tr>
                                <span style="font-weight: 500; font-size:40px; margin-left:10px">Bill</span>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">Receiver</th>
                                <td><input type="text" name="name" value="{{currentUser.name}}" class="form-control"
                                        required></td>
                            </tr>
                            <tr>
                                <th scope="row">Your Phone</th>
                                <td><input type="text" name="phone" value="{{currentUser.phone}}" class="form-control"
                                        required></td>
                            </tr>
                            <tr>
                                <th scope="row">Address to receive</th>
                                <td><input type="text" name="address" value="{{currentUser.address}}"
                                        class="form-control" required></td>
                            </tr>
                            <tr>
                                <th scope="row"><label>Bookselling price</label></th>
                                <td><input name="bookPrice" value="" readonly
                                        style="border: none; font-size: 19px; color: #454545dc;"></td>
                            </tr>
                            <tr>
                                <th scope="row">Transport fee</th>
                                <td><input name="transportFee" value="5" readonly
                                        style="border: none; font-size: 19px; color: #454545dc;"></td>
                            </tr>
                            <tr>
                                <th scope="row">Total</th>
                                <td><input name="totalPrice" value="" readonly
                                        style="border: none; font-size: 19px; color: #454545dc;"></td>
                            </tr>

                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary">
                        {{#if currentUser}}Checkout{{else}}<a href="/login">Checkout</a>{{/if}}</button>
            </form>
        </div>
    </div>

    {{> footer}}

    {{> importJS}}
    <script src="/javascript/checkout.js"></script>
</body>

</html>